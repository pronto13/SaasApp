<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Investor</h1>
          <p> Sign up as investor </p>
        <% else %>
          <h1>Debtor</h1>
          <p>Sign up as debtor</p>
        <% end %>
      </div>
      
      <div class="well">
        <h2>Sign up</h2>
          <% if params[:plan] == '2'%>
            <%= render "pro_form" %>
          <% else %>
            <%=render "basic_form" %>
          <% end  %>
          
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
